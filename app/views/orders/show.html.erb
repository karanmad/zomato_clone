<div class="row">
 <% if @placed_cart %>
  <div class="col-11 mx-auto">    
    <div class="card">
      <div class="card-header text-center">
        <h3>Current Order</h3>
      </div>
      <div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Food Items</th>
              <th scope="col">Unit price(Rs)</th>
              <th scope="col">Quantity</th>
              <th scope="col">Subtotal(Rs)</th>
            </tr>
          </thead>
          <tbody>
            <% @placed_cart.cart_items.each_with_index do |item,i| %>
            <tr>
              <td><%= i+1 %></td>
              <td><%=  item.food_item.name %></td>
              <td><%= item.food_item.price %> </td>
              <td><%= item.quantity %></td>
              <td><%= item.subtotal %></td>
            </tr>
            <% end %>
          </tbody> 
        </table>
        <h5 class="text-right mr-4">Total: Rs.<%= @placed_cart.total%></h5>
      </div>
    </div>
  </div>
<% else %>
 <div class="col-12 text-center">
  <h2 text-danger>No order</h2>
 </div>
<% end %>
</div>