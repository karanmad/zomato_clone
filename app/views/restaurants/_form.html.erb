<div class="page-wrapper">
  <div class="wrapper">
    <div class="card">
      <div class="card-body">
        <% unless["edit"].include?(params[:action])%>
          <h1 class="title text-center">Create Restaurant</h1>
          <% content_for :title, "Create Category" %>
        <% else %>
          <h1 class="title text-center">Update Restaurant</h1>
          <% content_for :title, "Update Category" %>
        <% end %>
         <% if @restaurant.errors.any? %>          
          <div class="alert alert-danger text-left">
            <ul>
              <% @restaurant.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <%end%>
            </ul>
          </div>
        <% end %>
        <%= form_for @restaurant do |form| %>
          <div class="form-group row">
            <%= form.label :restaurant_name,"Restaurant Name :", for: "restaurant name", class:"col-sm-3 col-form-label"%>
            <div class="col-sm-9">
              <%= form.text_field :restaurant_name, for: "restaurant name", class: "form-control", autofocus: true, autocomplete: "restaurant_name", placeholder: "Enter name", required: true %>
            </div>
          </div>
           <div class="form-group row">
            <%= form.label :address,"Address :", for: "address", class:"col-sm-3 col-form-label"%>
            <div class="col-sm-9">
              <%= form.text_field :address, for: "address", class: "form-control", autofocus: true, autocomplete: "address", placeholder: "Enter address", required: true %>
            </div>
          </div>
           <div class="form-group row">
            <%= form.label :email,"Email :", for: "email", class:"col-sm-3 col-form-label"%>
            <div class="col-sm-9">
              <%= form.text_field :email, for: "email", class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Enter email", required: true %>
            </div>
          </div>
           <div class="form-group row">
            <%= form.label :phone_no,"Phone Number :", for: "phone_no", class:"col-sm-3 col-form-label"%>
            <div class="col-sm-9">
              <%= form.text_field :phone_no, for: "phone_no", class: "form-control", autofocus: true, autocomplete: "phone_no", placeholder: "Enter phone number", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <%= form.label :restaurant_category, for: "restaurant_category", class:"col-sm-4 col-form-label"  %>
            <div class="col-sm-2 my-2">
              <%= form.select(:restaurant_category_id)  do %>
                <% @restaurant_category.each do |c| -%>
                  <%= content_tag(:option, c.name, value: c.id) %>
                <% end %>
              <% end %>
            </div>      
          </div>       
          <div class="row justify-content-center">
            <div class="col-2">
              <strong><%= link_to "BACK", admin_dashboards_path, class: "btn btn-danger btn-lg btn-block my-2 my-sm-0" %></strong>
            </div>
            <div class="col-2">
              <strong><%= form.submit "CREATE", class:"btn btn-primary btn-lg btn-block my-2 my-sm-0" %></strong>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
